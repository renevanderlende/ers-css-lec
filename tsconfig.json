{
	"compilerOptions": {
		"target": "ES5",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"lib": ["DOM", "ESNext"],
		"removeComments": false,
		"rootDir": "src",
		"outDir": "build",
		"module": "ES6"
	},
	"include": ["src/*.ts", "src/**/*.ts", "src/*.js", "src/**/*.js"]
}
